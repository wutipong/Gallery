{{define "folder-item"}}
<div class="col">
    <a href="{{.LinkURL}}">
        <div class="folder-border">
            <div class="folder-thumb-div">
                <img class="folder-thumb lazy" src ="/static/img/loading.gif" data-src="{{.ThumbURL}}?width=200" alt="{{.Name}}">
                </div>
            <span class="folder-thumb-name">{{.Name}}</span>
        </div>
    </a>
</div>
{{end}}