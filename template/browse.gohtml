{{template "html-head" .}}

<nav class="navbar navbar-dark bg-dark sticky-top navbar-expand-lg">
   <ol class="breadcrumb mr-auto">
        {{range .NavItems}}
            <li class="breadcrumb-item" aria-current="page"><a href="{{.URL}}">{{.Name}}</a></li>
        {{end}}
    </ol>
    <div class="my-2 my-lg-0">
        <form class="form-inline">
            <label for="sort-by">Sort By</label>
            <select id="sort-by" class="form-control">
                <option selected>Name</option>
                <option>Added Date</option>
            </select>
        </form>       
    </div>
</nav>

<div class="container">
    <div class="row">
    {{range .Dirs}}
        <div class="col">
            <a href="{{.LinkURL}}">
                <div class="folder-border">
                    <div class="folder-thumb-border">
                        <img class="folder-thumb" loading="lazy" src="{{.ThumbURL}}?width=200" alt="{{.Name}}">
                    </div>
                    <span class="folder-thumb-name">
                        <svg fill="currentColor">
                            <use href="/static/img/folder.svg"/>
                        </svg>
                        {{.Name}}
                    </span>
                </div>
            </a>
        </div>
    {{end}}
    </div>
</div>

<div class="container">
    <div class="row">
    {{range .Files }}
        <div class="col">
            <a href="/view/{{.Path}}#{{.StartIndex}}">
                <div class="file-border">
                    <div class="file-thumb-border">
                        <img class="file-thumb" loading="lazy" src="/get_image/{{.ImageURL}}?width=200" alt="{{.Name}}">
                    </div>
                    <span class="file-thumb-name">
                        <svg fill="currentColor">
                           <use href="/static/img/image.svg"/>
                        </svg>
                       {{.Name}}
                    </span>
                </div>
            </a>
        </div>
    {{end}}
    </div>
</div>